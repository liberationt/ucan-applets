/* components/divNavigation/divNavigation.wxss */
@import '/utils/iconfont.wxss';
.navigation {
    position: fixed;
    top: 0;
    left:0;
    right: 0;
    z-index: 99;
    font-size: 36rpx;
    border-bottom: 2rpx solid rgb(144,144,144,0.9);
}
.navigation .nav {
    padding-left: 30rpx;
    display: flex;
    align-items: center;
}
.navigation .nav image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    line-height: 50rpx;
}
.navigation .nav .title {
    width: 100%;
    position: absolute;
    left: 35%;
}
.navigation .nav text {
    font-weight: 500;
}
.navigation .nomarl text{
    margin-left: 40rpx;
    vertical-align: middle;
}