/* pages/myInfo/myInfo.wxss */
.myInfoPage {
    padding: 40rpx;
    font-size: 28rpx;
}
.myInfoPage .content {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.myInfoPage .row {
    width: 100%;
    height: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 70rpx;
}
.myInfoPage .content .right image{
    width: 78rpx;
    height: 78rpx;
}

.myInfoPage .btn {
    padding: 40rpx;
}

.myInfoPage .btn button{
    position: absolute;
    bottom: 50rpx;
    width: 80%;
    background-color: rgb(131,155,251);
    border-radius: 8rpx;
    color: #FFF;
    font-weight: normal;
}