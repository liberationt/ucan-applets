/* pages/order/order.wxss */
@import '/utils/iconfont.wxss';
.orderPage {
    padding: 32rpx 40rpx 0 40rpx;
    background-color: rgba(244, 244, 244);
}
.orderPage .search {
    height: 28rpx;
    border: 2rpx solid rgb(230,230,230);
    border-radius: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 18rpx 32rpx;
    margin-bottom: 32rpx;
    background-color: #FFF;
}
.orderPage .search icon{
    margin-right: 10rpx;
    margin-top:-14rpx
}
.orderPage .tab {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 30rpx;
}
.orderPage .tab text {
    font-size: 30rpx;
}
.orderPage .tab .hr {
    width: 46rpx;
    height: 8rpx;
    margin: 24rpx auto;
    border-radius: 4rpx;
    background-color: rgb(131,155,251);
}
.orderPage .time-section {
    margin-bottom: 16rpx;
}
.orderPage .time-section .picker {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    background-color: #FFF;
    border-radius: 8rpx;
    height: 72rpx;
    padding: 32rpx;
}
.orderPage .loading{  
    padding: 10rpx 0 20rpx 0;  
    text-align: center;
}
.orderPage .loading:before{  
display: inline-block;  
margin-right: 5rpx;  
vertical-align: middle;  
content: '';  
width: 40rpx;  
height: 40rpx;  
background-image: url(../../static//images/logo.png) no-repeat;  
background-size: contain;  
animation: rotate 1s linear infinite;  
}
.orderPage .loading .complete:before{  
    display: none;  
} 